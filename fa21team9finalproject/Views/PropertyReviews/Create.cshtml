@model fa21team9finalproject.Models.PropertyReview

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Property Review.</h1>

<p>You are creating a review for the property <strong class="text-info">@ViewBag.PropertyAddress</strong>. If you have previously made a review for this property, this new review will replace it.</p>
<hr />

<div class="text-danger">@ViewBag.ErrorMessage</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="PropertyID" value="@ViewBag.PropertyID" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <input asp-for="Review" class="form-control" />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Reservations" class="btn btn-outline-primary mt-3">Back to Reservations</a>
</div>

