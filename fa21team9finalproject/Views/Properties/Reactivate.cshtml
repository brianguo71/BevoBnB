@model fa21team9finalproject.Models.Property

@{
    ViewData["Title"] = "Reactivate Property Listing";
}

<h1>@ViewBag.Title.</h1>
<hr/>

<h5 class="mt-3 mb-3">Are you sure you want to reactivate your property located at: <strong class="text-info">@Html.DisplayFor(Model => Model.FullAddress)</strong>?</h5>
<div>
    <form asp-action="Reactivate">
        <input type="hidden" asp-for="PropertyID" />
        <input type="submit" value="Yes, Reactivate" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
    </form>
</div>
