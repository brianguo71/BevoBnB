@model fa21team9finalproject.Models.Property

@{
    ViewData["Title"] = "Delete Property Listing";
}

<h1>@ViewBag.Title.</h1>
<hr/>

<h5 class="mt-3 mb-3">Are you sure you want to delete your property located at: <strong class="text-info">@Html.DisplayFor(Model => Model.FullAddress)</strong>?</h5>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PropertyID" />
        <input type="submit" value="Yes, Delete" class="btn btn-secondary" /> |
        <a asp-action="Index" class="btn btn-primary">No, Cancel</a>
    </form>
</div>
